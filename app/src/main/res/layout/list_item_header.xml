<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/noGoalLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blueGrey_800"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:paddingVertical="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="작은 기회로부터 종종\n위대한 기회가 시작된다"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/rectangle_am400_r8"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/conTab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/amber_300"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"
                app:tabSelectedTextColor="@color/grey_900"
                app:tabTextColor="#66212121" />

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/conPager"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

    </LinearLayout>


</layout>